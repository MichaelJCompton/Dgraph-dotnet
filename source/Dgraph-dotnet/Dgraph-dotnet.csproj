<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <PackageId>Dgraph-dotnet</PackageId>
    
    <Title>.Net Dgraph Client</Title>
    <Authors>Michael Compton</Authors>
    <Company>Michael Compton Pty Ltd</Company>
    <Product>.Net Dgraph Client</Product>
    <Description>.Net client library for Dgraph</Description>
    <Copyright>Michael Compton</Copyright>
    <PackageProjectUrl>https://github.com/MichaelJCompton/Dgraph-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MichaelJCompton/Dgraph-dotnet</RepositoryUrl>
    <IncludeSymbols>True</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.2" />
    <PackageReference Include="Grpc" Version="2.26.0" />
    <PackageReference Include="Grpc.Tools" Version="2.26.0" PrivateAssets="All" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="FluentResults" Version="1.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="github.com/dgraph-io/dgraph/protos/pb.proto" />
    <Protobuf Include="github.com/dgraph-io/dgo/protos/api.proto" />
    <Protobuf Include="github.com/dgraph-io/badger/pb/badger.proto" />
  </ItemGroup>

</Project>